{
    "manifest_version": 3,
    "name": "Data Layer Inspector",
    "version": "1.1",
    "description": "Inspects and monitors dataLayer pushes in Chrome DevTools.",
    "devtools_page": "src/devtools.html",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content_script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/injected_script.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background.js"
    }
}